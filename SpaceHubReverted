-- Создаем текстовый объект
local textLabel = Instance.new("TextLabel")

-- Устанавливаем родительский объект (экран)
textLabel.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Устанавливаем позицию и размер текста
textLabel.Position = UDim2.new(0.5, -100, 0.5, -25) -- Центрируем текст на экране
textLabel.Size = UDim2.new(0, 200, 0, 50)

-- Устанавливаем текст и его свойства
textLabel.Text = "Читать тг научись"
textLabel.TextColor3 = Color3.new(1, 1, 1) -- Белый цвет текста
textLabel.TextScaled = true -- Масштабируем текст, чтобы он подстраивался под размер
textLabel.Font = Enum.Font.SourceSansBold -- Шрифт
textLabel.BackgroundTransparency = 1 
